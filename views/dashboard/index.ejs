<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <!-- <h1>Hey, <%= userName %>!</h1> -->
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary">+ New Task</a>
    </div>
  </div>
</div>

<div class="row">
  <% if (tasks.length > 0) { for(let i=0; i < tasks.length; i++) {%>
  <div class="col-sm-3 mb-4">
    <div class="card border-primary" style="min-height: 210px">
      <a
        href="/dashboard/item/<%= tasks[i]._id %>"
        class="card-body text-decoration-none"
      >
        <h5 class="card-title"><%= tasks[i].title %></h5>
        <p class="card-text"><%= tasks[i].body %></p>
      </a>
    </div>
  </div>
  <% }} else { %>
  <div class="row">
    <div class="col-3">
      <img src="/img/img2.svg" alt="" />
    </div>
  </div>

  <% } %>
</div>
